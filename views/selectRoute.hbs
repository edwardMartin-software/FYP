<!DOCTYPE html>
<html>
<title>{{title}}</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>

table, th, td {
border: 1px solid black;
border-collapse: collapse;
}
th, td {
padding: 5px;
text-align: left;
background-color: inherit;

}
.td style1{
  background-color: #4CAF50;
}
td:hover{
  background-color: #4CAF50;
}
tr {
height:15px;
}
.icon-bar {
  width: 100%;
  height: 99px;
  background-color: #555;
  overflow: auto;
  text-align: center;
  position: fixed;
  top: 0;

}

.icon-bar a {
  float: left;
  width: 25%;
  text-align: center;
  padding: 20px 0;
  transition: all 0.3s ease;
  color: white;
  font-size: 30px;
  text-decoration: none;
}

.icon-bar a:hover {
  background-color: #4CAF50;
}

.icon-bar span {
  display: block;
  font-size: 50%
}

.icon-bar i {
  height: 37px;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #555;
  color: white;
  text-align: center;
}

.footer p {
  text-align: left;
}

</style>
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://www.w3schools.com/lib/w3-theme-red.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css">
<body>

<br>
<br>
<br>
<br>


  <div class="icon-bar">
    <a href="/login"><i class="fa fa-home"></i><span>Home</span></a>
    <a href="/Drive"><i class="fa fa-car"></i><span>Drive</span></a>
    <a onclick="myFunction()" href="/AddRoute"><i class="fa fa-plus"></i><span>Add Route</span></a>
    <a href="/CurrentRoute"><i class="fa fa-crosshairs"></i><span>Current Route</span></a>

  </div>



<div class="w3-row-padding w3-center w3-margin-top">

  <div class="w3-card w3-container" style="min-height:600px">
    <table style="width:40%; font-size: 15px; height:70%; " align="center" >
    <h3>Routes</h3>
    <tr>
      <th>Route</th>
    </tr>
      {{# each items }}
          <tr >
              <td id="Row" onclick="display()">{{this.name}}</td>
            </tr>
      {{/each}}
      </table>
      <br>
      <br>
      <br>
      <form action="/SelectedRoute" method="post">
        <div class ="input">
          <br>
          <label style="color:Green" for="route"><b>Route</b></label>
          <input type="text" id="routebox" name="route" input="Bla">
        </div>
        <br>
        <button  type="submit" class="btn">Select</button>
      </form>

  </div>



  <script>
  function myFunction() {
    var txt;
    var routeName = prompt("Please enter route name:", "Shed 1");
    if (routeName == null || routeName == "") {
      txt = "User cancelled the prompt.";
    } else {
      xhttp.open("POST", "/Name", true);
      xhttp.setRequestHeader("content-type", "application/json");
      txt.name = routeName;
      xhttp.send(JSON.stringify(txt));
    }
  }
  var x = { name : ""};


  function display(){
    x.name = document.getElementById("Row").innerHTML;
    document.getElementById("routebox").setAttribute("value", ""+x.name);
    console.log(x);

  }


    </script>

</body>
</html>
